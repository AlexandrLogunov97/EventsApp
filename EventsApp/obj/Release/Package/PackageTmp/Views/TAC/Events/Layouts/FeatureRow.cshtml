@functions{
    TagBuilder CreateWrap(DynamicPlaceholderRenderContext context)
    {
        var tagBuilder = new TagBuilder("div");
        int[] widths = new int[] { 0, 12, 6, 4, 3 };
        tagBuilder.AddCssClass("col-sm-" + widths[context.PlaceholdersCount]);
        return tagBuilder;
    }
}
