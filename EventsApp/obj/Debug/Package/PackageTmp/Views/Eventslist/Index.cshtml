@using EventsApp.Models;
@using TAC.Utils.Helpers;
@model EventsApp.Models.EventsList

<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var item in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="Event-Detail.html">
                        @item.EventImage
                    </a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="Event-Detail.html">@item.ContentHeading</a>
                    </h3>
                    <div class="description">
                        <p>
                            @item.ContentIntro
                        </p>
                    </div>
                </div>
                <div class="metadata well"></div>
            </li>
        }
    </ol>
</div>
@Html.Pager(Model.PageSize,Model.TotalResultCount)